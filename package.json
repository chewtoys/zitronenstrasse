{
  "name": "zitronenstrasse",
  "description": "Zitronenstrasse | Romantic spots in Berlin.",
  "version": "10.4.0",
  "author": "Valerio Sillari <hello@zitronenstrasse.com>",
  "license": "GPL-3.0",
  "private": true,
  "engines": {
    "node": ">= v10.15.3",
    "yarn": ">= v1.15.2"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "heroku-postbuild": "npm run build",
    "build:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt build",
    "generate:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt generate",
    "gh-pages-deploy": "push-dir --dir=dist --branch=gh-pages --cleanup",
    "deploy": "yarn generate:gh-pages && yarn gh-pages-deploy"
  },
  "dependencies": {
    "@nuxtjs/font-awesome": "^1.0.3",
    "@nuxtjs/google-analytics": "^2.0.2",
    "@nuxtjs/sitemap": "^0.1.1",
    "@nuxtjs/style-resources": "^0.1.1",
    "bootstrap": "^4.1.3",
    "breakpoint-sass": "^2.7.1",
    "core-js": "^2.5.7",
    "cross-env": "^5.2.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "hover.css": "^2.3.2",
    "modernizr": "^3.6.0",
    "node-sass": "^4.9.3",
    "nuxt": "^2.0.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "push-dir": "^0.4.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "vue-cookie-law": "^1.7.0",
    "vue2-google-maps": "^0.10.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "nodemon": "^1.11.0",
    "prettier": "1.14.3"
  }
}
